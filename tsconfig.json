{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["es6"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    // "checkJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*",
    "./src/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}